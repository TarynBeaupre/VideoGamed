{{> Header }}

<h4> My Profile </h4>
<div class="userInfo">
<img class="review-profile-pic" src="{{ user.pfp }}">
<h3> {{ user.username }} </h3> 
<form method="GET" action="{{ path 'updateUsername' }}" id="update-username-button">
	<input type="submit" value="Change username" id="register-form-submit-button">
</form>
<form method="GET" action="{{ path 'updatePfp' }}" id="update-pfp-button">
	<input type="submit" value="Change avatar" id="register-form-submit-button">
</form>
</div>

<div class="statsBox"> 
<h2> Stats </h2>
<h4> Reviews: {{ reviewsCount }} </h4>
<h4> Likes Received: {{ likesReceived }} </h4>

</div>

<div class="reviewsBox">
<h2> My Reviews </h2>
{{#unless reviews}}
	<p>You have not written any reviews yet. </p>
{{else}}
	<div id="reviews" class="reviews-container">
		{{#each reviews}}
			<div class="review-container" review-id="{{ this.props.id }}">
        <h3> {{ this.props.username }} </h3> 
        <div class="review-title" href="">
          <div>
            <a href="/games/{{ this.props.reviewedGameId }}">{{ this.props.title }}</a>
          </div>
        </div>
        <div class="review-text">
          <p>
          {{ this.props.review }}
          </p>
        </div>

        <!-- REVIEWS -->
        <div class="review-likes">
          <p>⭐️⭐️⭐️⭐️⭐️</p>
          <div class="review-likes">
            <img class="like-logo" src="../../images/icons/thumbs-up(2).svg">
            <p>{{this.props.likes}}</p>
          </div>
        </div>

			</div>
		{{/each}}
	</div>
{{/unless}}
</div>

{{> Footer}}
