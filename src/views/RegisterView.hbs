{{> Header }}
    <h1>Register</h1>

{{#if error}}
<p style="color: red;" id="error">{{error}}</p>
{{/if}}

<form method="POST" action="{{ path 'users' }}" id="register-form">
	<label for="email">Email:</label>
    <input type="email" id="email" name="email" value="{{rememberedEmail}}">
	
	<label for="password">Password:</label>
    <input type="password" id="password" name="password">

	<label for="password">Confirm Password:</label>
    <input type="password" id="confirmPassword" name="confirmPassword">
	
	<input type="submit" value="Create" id="register-form-submit-button">
</form>
{{> Footer}}
