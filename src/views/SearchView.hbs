{{> Header }}

<h1>All Games</h1>

{{#unless games}}
	<p>No games found</p>
{{else}}
	<ol id="games">
		{{#each games}}
			<li game-id="{{ this.id }}">
				<a href="/games/{{ this.id }}">{{ this.title }}</a>
				<img src="{{ this.cover }}" height="200" width="150">
			</li>
		{{/each}}
	</ol>
{{/unless}}

{{> Footer}}
