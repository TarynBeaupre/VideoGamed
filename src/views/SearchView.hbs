{{> Header }}

<h1>All Games</h1>

<form method="POST" action="/search" id="search-bar">
	<div class="search">
		<label for="search">Search:</label>
		<input type="text" id="search" name="search"/>
		<input type="submit" value="Search" id="search-button" class="search-button">
	</div>
</form>

{{#unless games}}
	<p>No games found</p>
{{else}}

	<ol id="games">
		{{#each games}}
			<li game-id="{{ this.id }}">
				<div class="gameInfo">
					<div>
						<a href="/games/{{ this.id }}">{{ this.title }}</a>
						<p> {{ this.developer }} </p>
						<p> {{ this.releaseYear }} </p>
					</div>
					<div>
						<img src="{{ this.cover }}" height="200" width="150">
					</div>
				</div>
			</li>
		{{/each}}
	</ol>
{{/unless}}

{{> Footer}}
